---
import MainLayout from "../layouts/Base.astro";
import ItemCard from "../components/ItemCard.astro";
import MemberCard from "../components/MemberCard.astro";

const menu = await Astro.glob("../content/menu/*.md");

const coffees = menu.filter((item) => item.frontmatter.category === "coffee");
const pastries = menu.filter((item) => item.frontmatter.category === "pastry");
const members = menu.filter((item) => item.frontmatter.category === "member");
---

<MainLayout>
<div class="min-h-screen bg-green-500 flex flex-col items-center py-12">
  <section class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg mb-8">
    <h2 class="text-center text-2xl font-bold mb-4">Contact Information</h2>
    <p class="text-center text-lg font-medium">Caf√© Address</p>
    <p class="text-center text-gray-700 mb-4">Libis Road, Barangay San Pedro, Puerto Princesa, Palawan</p>
    
    <p class="text-center text-lg font-medium">Phone Number</p>
    <p class="text-center text-gray-700 mb-4">(63) 9166833896</p>
    
    <p class="text-center text-lg font-medium">Email Address</p>
    <p class="text-center text-gray-700">contact@cozycafe.com</p>
  </section>


  
  <section class="w-full max-w-lg">
    <h2 class="text-center text-xl font-bold mb-4 text-white">Find Us Here</h2>
