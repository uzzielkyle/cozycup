---
const { item } = Astro.props;
---

<div
  class="rounded-lg shadow-lg max-w-xs h-[400px] bg-gray-100 bg-opacity-50 backdrop-blur-lg flex flex-col overflow-hidden"
>
  <div class="flex justify-center items-center h-[70%] overflow-hidden w-full">
    <img
      src={"/" + item.image}
      alt={"An image of " + item.name}
      class="w-full object-fill"
    />
  </div>
  <div class="p-5">
    <h4 class="text-xl font-bold">{item.name}</h4>
    <span class="text-gray-700 text-pretty">{item.description}</span>
    <p class="mt-2 py-2 text-sm">
      {item.bio}
    </p>
  </div>
</div>
